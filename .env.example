# ====================================
# DIGIFLOW HUB V4 - CONFIGURATION
# ====================================
# Copier ce fichier en .env.local et remplir avec vos vraies clés

# ====================================
# URL DE BASE
# ====================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_URL=http://localhost:3000

# ====================================
# FIREBASE (Client & Admin)
# ====================================
# Firebase Client (pour l'authentification côté client)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Firebase Admin (pour les opérations serveur)
FIREBASE_ADMIN_PROJECT_ID=
FIREBASE_ADMIN_CLIENT_EMAIL=
FIREBASE_ADMIN_PRIVATE_KEY=

# ====================================
# META/FACEBOOK (OAuth & API)
# ====================================
META_APP_ID=
META_APP_SECRET=
NEXT_PUBLIC_META_APP_ID=
META_ACCESS_TOKEN=
META_BUSINESS_ID=

# ====================================
# GOOGLE ADS API
# ====================================
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_CUSTOMER_ID=

# ====================================
# TIKTOK ADS API
# ====================================
TIKTOK_APP_ID=
TIKTOK_APP_SECRET=
TIKTOK_ACCESS_TOKEN=

# ====================================
# STRIPE (Paiements)
# ====================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# ====================================
# BASE DE DONNÉES (PostgreSQL)
# ====================================
DATABASE_URL=postgresql://user:password@localhost:5432/digiflow_hub_v4
REDIS_URL=redis://localhost:6379

# ====================================
# INTELLIGENCE ARTIFICIELLE
# ====================================
# Anthropic (Claude - Principal)
ANTHROPIC_API_KEY=

# OpenAI (Fallback/Vision)
OPENAI_API_KEY=

# ====================================
# WHATSAPP CLOUD API (LeadWarm)
# ====================================
WHATSAPP_CLOUD_ACCESS_TOKEN=
WHATSAPP_PHONE_ID=
WHATSAPP_WEBHOOK_VERIFY_TOKEN=

# ====================================
# EMAIL/SMS PROVIDERS
# ====================================
# Brevo (ex-Sendinblue)
BREVO_API_KEY=

# Twilio (SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ====================================
# SERVICES TIERS
# ====================================
# Pappers API (Validation SIRET)
PAPPERS_API_KEY=

# ====================================
# SÉCURITÉ & AUTHENTIFICATION
# ====================================
JWT_SECRET=your-secret-key-minimum-32-characters-long
TOKEN_ENCRYPTION_KEY=your-32-character-encryption-key
IDEMPOTENCY_SALT=random-salt-for-idempotency-keys
CRON_SECRET=secret-for-cron-jobs

# ====================================
# SUPER ADMIN
# ====================================
SUPERADMIN_EMAILS=admin@digiflow-hub.com
SUPERADMIN_IP_ALLOWLIST=127.0.0.1,::1

# ====================================
# ENVIRONNEMENT
# ====================================
NODE_ENV=development
VERCEL_ENV=development

# ====================================
# MONITORING (Optionnel)
# ====================================
SENTRY_DSN=
LOGTAIL_SOURCE_TOKEN=

# ====================================
# FEATURE FLAGS (Optionnel)
# ====================================
FEATURE_GOOGLE_ADS=false
FEATURE_TIKTOK_ADS=false
FEATURE_LEADWARM_MULTICHANNEL=true
FEATURE_SUPER_ADMIN=true